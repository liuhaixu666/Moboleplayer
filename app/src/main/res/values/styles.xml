<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="lunchthem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="ThemeWithoutAnim" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>
    <style name="Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:button="@android:color/transparent"
    android:textColor="@drawable/rb_video_textcolor_selector"
    android:drawablePadding="3dp"
    android:textSize="10sp"/>
    <style name="bottom_tag_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@drawable/rb_video_textcolor_selector</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">1</item>
    </style>


</resources>
